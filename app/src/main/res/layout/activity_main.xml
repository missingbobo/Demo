<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.login.MainActivity">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登陆界面"
            android:textColor="#900" />

        <Button
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="get" />

        <Button
            android:id="@+id/put"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="put" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/btn_surprise_giveup_selector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_giveup" />

        <ImageButton
            android:layout_width="200dp"

            android:layout_height="40dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/bny" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/bny"
            android:text="hello" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:background="@mipmap/actionbar_bg" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>
</ScrollView>